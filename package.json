{
	"name": "html-sentinel-shepherd",
	"version": "0.0.9",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"dependencies": {
		"@prettier/html-event-attributes": "^0.0.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@types/bun": "latest",
		"@types/glob": "8",
		"bun": "^1.3.2",
		"html-validate": "^10.3.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6",
		"minimatch": "9",
		"tsdown": "^0.16.3"
	},
	"peerDependencies": {
		"typescript": "^5.9.3",
		"html-validate": "^10.3.1"
	},
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"description": "A html-validate plugin",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "bunx tsdown",
		"lint": "bunx biome check --write .",
		"prepublishOnly": "bun run build",
		"prepare": "husky"
	},
	"type": "module",
	"types": "./dist/index.d.ts",
	"lint-staged": {
		"*": [
			"bun run lint"
		]
	},
	"keywords": [
		"html-validate",
		"html",
		"validation",
		"rules",
		"plugin",
		"linting"
	],
	"engines": {
		"node": ">=20.0.0"
	}
}
