{
	"name": "html-sentinel-shepherd",
	"author": "Ariel Maniago <admaniago01@gmail.com>",
	"license": "MIT",
	"version": "0.0.11",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"homepage": "https://github.com/ayiezac78/html-sentinel-shepherd/#readme",
	"bugs": {
		"url": "https://github.com/ayiezac78/html-sentinel-shepherd/issues"
	},
	"dependencies": {
		"@prettier/html-event-attributes": "^0.0.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@types/bun": "latest",
		"@types/glob": "^8.1.0",
		"@vitest/coverage-v8": "^4.0.14",
		"@vitest/ui": "4.0.14",
		"bun": "^1.3.3",
		"html-validate": "^10.4.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"minimatch": "^9.0.5",
		"tsdown": "^0.16.8",
		"vitest": "^4.0.14"
	},
	"peerDependencies": {
		"typescript": "^5.9.3",
		"html-validate": "^10.4.0"
	},
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"description": "A custom plugin for html-validate linting rule for HTML files.",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "bunx tsdown",
		"lint": "bunx biome check --write .",
		"patch": "bunx --bun version patch",
		"prepublishOnly": "bun run build",
		"prepare": "husky",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage"
	},
	"type": "module",
	"types": "./dist/index.d.ts",
	"lint-staged": {
		"*": [
			"bun run lint"
		]
	},
	"keywords": [
		"html-validate",
		"html",
		"validation",
		"rules",
		"plugin",
		"linting"
	],
	"engines": {
		"node": ">=20.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ayiezac78/html-sentinel-shepherd.git"
	}
}
